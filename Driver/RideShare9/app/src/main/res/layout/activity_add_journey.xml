<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJourneyActivity">



    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dip">

                <TextView
                    android:id="@+id/error_addJourney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/Layout_Info_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addInfoTitle"
                        android:layout_width="298dp"
                        android:layout_height="wrap_content"
                        android:text="Information of Your Trip"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/Layout_startLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Logo_startLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_compass" />

                    <EditText
                        android:id="@+id/startLocationText"
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/startLocationHint"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textColorLink="@color/black_overlay" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Layout_endLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Logo_endLocation"
                        android:layout_width="74dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_mylocation" />

                    <EditText
                        android:id="@+id/endLocationText"
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/endLocationHint"
                        android:paddingLeft="20dp"
                        android:textColorLink="@color/black_overlay" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/Layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/starttime_label"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:text="@string/starttime_first"
                        android:onClick="showTimePickerDialog"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/startdate_label"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/startdate_first"
                        android:onClick="showDatePickerDialog"
                        android:textSize="18sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <LinearLayout
                    android:id="@+id/Layout_select_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vehicleText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/chooseVehicle"
                        android:textSize="18sp"
                        app:srcCompat="@mipmap/ic_lock_outline_black_24dp" />

                    <Spinner
                        android:id="@+id/spinnerVehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <LinearLayout
                    android:id="@+id/Layout_available_seating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/availableSeating"
                        android:textSize="18sp"
                        app:srcCompat="@mipmap/ic_lock_outline_black_24dp" />

                    <Spinner
                        android:id="@+id/spinnerSeating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="17dp" />


                <LinearLayout
                    android:id="@+id/Layout_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/finalcostText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/finalCostHint"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="17dp" />

                <LinearLayout
                    android:id="@+id/Layout_listStops"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">


                    <ListView
                        android:id="@+id/stop_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"></ListView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/add_stops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/Btn_addStop"
                        android:layout_width="100dp"
                        android:onClick="addStop"
                        android:layout_height="match_parent"
                        android:text="@string/addStop_Button" />



                    <Button
                        android:id="@+id/Btn_addJourney"
                        android:layout_width="100dp"
                        android:layout_toRightOf="@id/Btn_addStop"
                        android:layout_height="match_parent"
                        android:onClick="addJourney"
                        android:text="@string/AddJourney_Button" />

                    <Button
                        android:id="@+id/Btn_cancelJourney"
                        android:layout_width="100dp"
                        android:onClick="onCancel"
                        android:layout_toRightOf="@id/Btn_addJourney"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel_Button" />
               `</RelativeLayout>

            </LinearLayout>

        </ScrollView>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecondary"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
