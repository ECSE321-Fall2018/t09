<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.mcgill.ecse321.rideshare9">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/driver_1278011"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/driver_1278011"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FullscreenActivity_signup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="RideShare9"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".RideShare9"
            android:label="@string/title_activity_ride_share9" />
        <activity
            android:name=".AddVehicleActivity"
            android:label="@string/title_activity_add_vehicle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeVehicle"
            android:label="@string/title_activity_change_vehicle"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".addJourneyActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ChangeAdvertisementActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".VehicleManager"
            android:label="@string/title_activity_vehicle_manager"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>