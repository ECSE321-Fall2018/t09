<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brighterPrimary"
    android:padding="10dp"
    tools:context=".user.AdvertisementViewerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/advertisement_viewer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/advertisement_viewer_startsAtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starts at:McGill University"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/advertisement_viewer_startsAtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-11-18 10:30:00"
            android:textColor="#131d21"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_stops"
            android:textColor="#131d21"
            android:textSize="30sp"
            android:layout_marginTop="15dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvStopsForJourney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>